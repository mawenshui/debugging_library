<local:ThemedWindow x:Class="FieldKb.Client.Wpf.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FieldKb.Client.Wpf"
        mc:Ignorable="d"
        Title="日志" Height="720" Width="1100" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Border Style="{StaticResource Card}" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock FontSize="18" FontWeight="SemiBold" Text="本次启动日志" />
                        <TextBlock Margin="0,4,0,0" Foreground="{StaticResource Brush.SubText}" Text="{Binding LogFilePath}" TextTrimming="CharacterEllipsis" />
                    </StackPanel>
                    <Button Grid.Column="1" Style="{StaticResource Button.Outline}" Padding="12,8" Command="{Binding OpenLogFolderCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8B7;" Margin="0,0,6,0" />
                            <TextBlock Text="打开文件夹" />
                        </StackPanel>
                    </Button>
                </Grid>

                <Border Grid.Row="1" Margin="0,12,0,0" Style="{StaticResource GlassPanel}" CornerRadius="14" Padding="12">
                    <TextBlock Foreground="{StaticResource Brush.SubText}" Text="说明：此窗口展示本次启动以来的历史日志，并会实时追加新日志。" TextWrapping="Wrap" />
                </Border>

                <ListBox Grid.Row="2" Margin="0,12,0,0" ItemsSource="{Binding Entries}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,8" Style="{StaticResource GlassPanel}" CornerRadius="14" Padding="10">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold">
                                        <Run Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss.fff}}" />
                                        <Run Text="  [" />
                                        <Run Text="{Binding Level}" />
                                        <Run Text="] " />
                                        <Run Text="{Binding Message}" />
                                    </TextBlock>
                                    <TextBlock Margin="0,6,0,0" Foreground="{StaticResource Brush.SubText}" FontSize="12" Text="{Binding Category}" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Margin="0,6,0,0" Foreground="{StaticResource Brush.SubText}" FontSize="12" Text="{Binding Exception}" TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</local:ThemedWindow>
