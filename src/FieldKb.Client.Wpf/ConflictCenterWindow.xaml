<local:ThemedWindow x:Class="FieldKb.Client.Wpf.ConflictCenterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FieldKb.Client.Wpf"
        mc:Ignorable="d"
        Title="冲突中心" Height="680" Width="1100" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360" />
            <ColumnDefinition Width="14" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Style="{StaticResource Card}" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock FontSize="18" FontWeight="SemiBold" Text="冲突中心" />
                    <TextBlock Margin="0,4,0,0" Foreground="{StaticResource Brush.SubText}" Text="选择冲突条目并决定保留本地或采用导入。" />
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                    <Button Style="{StaticResource Button.Outline}" Padding="12,8" Content="刷新" Command="{Binding RefreshCommand}" />
                    <Button Margin="10,0,0,0" Style="{StaticResource Button.Outline}" Padding="12,8" Content="全选" Command="{Binding SelectAllCommand}" />
                    <Button Margin="10,0,0,0" Style="{StaticResource Button.Outline}" Padding="12,8" Content="清空选择" Command="{Binding ClearSelectionCommand}" />
                </StackPanel>

                <ListBox Grid.Row="2" Margin="0,12,0,0" ItemsSource="{Binding Conflicts}" SelectedItem="{Binding SelectedConflict}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="14,10">
                                <CheckBox Margin="0,2,10,0" IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" Text="{Binding DisplayText}" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Foreground="{StaticResource Brush.SubText}" FontSize="12" Text="{Binding SubText}" TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Border Grid.Row="3" Margin="0,12,0,0" Style="{StaticResource GlassPanel}" CornerRadius="14" Padding="12">
                    <TextBlock Foreground="{StaticResource Brush.SubText}" Text="{Binding StatusText}" />
                </Border>
            </Grid>
        </Border>

        <Border Grid.Column="2" Style="{StaticResource Card}" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock FontWeight="SemiBold" Text="{Binding LocalHeaderText}" />
                    <TextBlock Grid.Column="2" FontWeight="SemiBold" Text="{Binding ImportedHeaderText}" />
                </Grid>

                <Grid Grid.Row="1" Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Foreground="{StaticResource Brush.SubText}" Text="{Binding DiffText}" TextWrapping="Wrap" />

                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding LocalText}" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Padding="12" />
                        <TextBox Grid.Column="2" Text="{Binding ImportedText}" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Padding="12" />
                    </Grid>
                </Grid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <TextBlock VerticalAlignment="Center" Margin="0,0,12,0" Foreground="{StaticResource Brush.SubText}"
                               Text="{Binding SelectedCount, StringFormat=已选 {0} 条（若未勾选，则按当前高亮项处理）}" />
                    <Button Width="170" Margin="0,0,10,0" Style="{StaticResource Button.Outline}"
                            Content="{Binding SelectedCount}"
                            ContentStringFormat="保留本地（{0}）"
                            Command="{Binding KeepLocalSelectedCommand}" />
                    <Button Width="190"
                            Content="{Binding SelectedCount}"
                            ContentStringFormat="采用导入版本（{0}）"
                            Command="{Binding UseImportedSelectedCommand}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</local:ThemedWindow>
